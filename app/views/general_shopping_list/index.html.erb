<div class="container bg-light text-center p-3">
    <p class="h1">Shopping List<p>
    <div class="d-flex justify-content-around">
      <p class="h5">Amount of food items to buy: <%=@food_items%></p>
      <p class="h5">Total value of food needed: <%=@total%></p>
    </div>
</div>


<div class="container text-center mt-3">
    <table class="table table-striped">
        <thead>
            <tr>
              <th class="col" >Food</th>
              <th class="col" >Quantity</th>
              <th class="col" >Total value</th>
            </tr>
        </thead>
        <tbody>
          <%@recipe_foods.each do |food| %>
            <tr>
              <td><%=Food.find(food.food_id).name%></td>
              <td><%=food.quantity%></td>
              <td><%=food.quantity*Food.find(food.food_id).price%></td>
            <%end%>
            </tr>      
        </tbody>
    </table>
</div>



<div class="foods">
   <div>
       <p>Food</p>
       <%@recipe_foods.each do |food|%>
           <div><%=Food.find(food.food_id).name%></div>
       <%end%>
   </div>
   <div>
       <p>Quantity</p>
       <%@recipe_foods.each do |food|%>
           <div><%=food.quantity%></div>
       <%end%>
   </div>
    <div>
       <p>Price</p>
       <%@recipe_foods.each do |food|%>
           <div><%=food.quantity*Food.find(food.food_id).price%></div>
       <%end%>
   </div>
</div>