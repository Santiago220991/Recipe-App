<div class="container d-flex flex-column align-items-center bg-light rounded p-3">
<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-outline mb-4">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Send me reset password instructions", class: "btn btn-outline-success btn-block mb-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
