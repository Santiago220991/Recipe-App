 <% flash.each do |type, msg| %>
            <%= content_tag :div, msg, class: "#{type} alert" %>
            <% end %>
            
            <%= form_with url: "/recipes/#{@recipe.id}/recipe_foods", scope: :recipe_food do |f| %>
                 <%= f.collection_select(:food_id, Food.where(id: @recipe.user_id), :id, :name) %>
                  <%= f.number_field :quantity, placeholder: "Quantity" %>
                  <%= f.hidden_field :recipe_id, value: @recipe.id %>
                  <%= f.submit "Add" %>
                <% end %> 