<% flash.each do |type, msg| %>
    <%= content_tag :div, msg, class: "#{type} alert" %>
    <% end %>
    <%= form_with url: "/recipes", scope: :recipe do |f| %>
          <%= f.text_field :name, placeholder: "Name" %>
          <%= f.text_field :preparation_time, placeholder: "Preparation Time" %>
          <%= f.text_field :cooking_time, placeholder: "Cooking Time" %>
          <%= f.text_field :description, placeholder: "Description" %>
          <%= f.check_box :public, {}, "true", "false" %>
          <%= f.submit "Submit" %>
        <% end %> 