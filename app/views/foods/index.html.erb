<div class="container p-5 rounded">
<div><%= "List of Food" %></div>

<%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false } %>
<%= link_to "Add Food", new_food_path %>

<table class="table table-striped text-center mt-3">
    <thead>
     <tr>
        <th scope="col">
            <p>Food</p>
            <% @foods.each do |food| %>
             <div><%= food.name %></div>
            <% end %>
        </th>

        <th scope="col">
            <p>Measurement unit</p>
            <% @foods.each do |food| %>
                <div><%= food.measurement_unit %></div>
            <% end %>
        </th>

        <th scope="col">
            <p>Unit price</p>
            <% @foods.each do |food| %>
                <div><%= food.price %></div>
            <% end %>
        </th>

        <th scope="col">
            <p>Quantity</p>
            <% @foods.each do |food| %>
                <div><%= food.quantity %></div>
            <% end %>
        </th>

         <th scope="col">
            <p>Actions</p>
            <% @foods.each do |food| %>
                <div><%= button_to "Delete", food_path(id: food.id), method: :delete %></div>
            <% end %>
        </th>

     </tr>
    </thead>
</table>
