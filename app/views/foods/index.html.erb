<div><%= "List of Food" %></div>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<%= link_to "Add Food", new_food_path%>
<div class="foods">
    <div class="food_name">
        <p>Food</p>
        <%@foods.each do |food|%>
            <div><%=food.name%></div>
        <%end%>
    </div>
    <div class="m_unit">
        <p>Measurement unit</p>
        <%@foods.each do |food|%>
            <div><%=food.measurement_unit%></div>
        <%end%>
    </div>
    <div class="unit_price">
        <p>Unit price</p>
        <%@foods.each do |food|%>
            <div><%=food.price%></div>
        <%end%>
    </div>
     <div class="quantity">
        <p>Quantity</p>
        <%@foods.each do |food|%>
            <div><%=food.quantity%></div>
        <%end%>
    </div>
    <div class="actions">
        <p>Actions</p>
        <%@foods.each do |food|%>
            <div><%=button_to "Delete", food_path(id: food.id), method: :delete%></div>
        <%end%>
    </div>
</div>