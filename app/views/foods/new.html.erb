<div class="container p-5 bg-light rounded p-3">
  <h2 class="h3 text-center">Create your favorite Food</h2>
  <%= form_with model: @food, url: foods_path do |f| %>
  <div class="d-flex flex-column">
    <div class="field form-outline mb-4">
      <%= f.label :name, class:"form-label" %>
      <%= f.text_field :name, class:"form-control" %>
    </div>

     <div class="field form-outline mb-4">
      <%= f.label :measurement_unit, class:"form-label"%>
      <%= f.text_field :measurement_unit, class:"form-control" %>
    </div>

    <div class="field form-outline mb-4">
      <%= f.label :price, class:"form-label" %>
      <%= f.number_field :price, step: :any, class:"form-control" %>
    </div>

    <div class="field form-outline mb-4">
      <%= f.label :quantity, class:"form-label" %>
      <%= f.number_field :quantity, class:"form-control" %>
    </div>
  
    <div class="actions text-center">
       <%= f.submit "Create Food", class:"btn btn-outline-primary btn-lg"%>
     </div>
  </div>
  <% end %>
</div>


